{
  "name": "EXOINTER",
  "version": "1.0.6",
  "description": "Je suis votre assistant assistant qui facilite la communication inter-serveurs.",
  "homepage": "https://rl-informatique.fr",
  "private": true,
  "type": "module",
  "engines": {
    "node": "24.x",
    "npm": ">=11.0.0"
  },
  "scripts": {
    "start": "node src/bot.js",
    "dev": "nodemon src/bot.js",
    "prod": "NODE_ENV=production node src/bot.js",
    "update": "npm-run-all -s update:deps audit fix",
    "update:deps": "npx npm-check-updates -u && npm install",
    "update:interactive": "npx npm-check-updates -i",
    "audit": "npm audit --audit-level=moderate",
    "fix": "npm audit fix --force",
    "clean": "rm -rf node_modules package-lock.json && npm install",
    "check": "npm outdated"
  },
  "dependencies": {
    "better-sqlite3": "^12.4.1",
    "discord.js": "^14.23.2",
    "dotenv": "^17.2.3",
    "kleur": "^4.1.5"
  },
  "devDependencies": {
    "nodemon": "^3.1.10",
    "npm-check-updates": "^19.0.0",
    "npm-run-all": "^4.1.5"
  },
  "author": "EXOBOT",
  "license": "MIT"
}
